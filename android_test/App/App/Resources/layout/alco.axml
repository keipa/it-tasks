<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/meterlayout">

  <TextView
      android:id="@+id/text1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Крепость напитка: "
      android:textStyle="bold"
      android:textSize="20dp" />
  <TextView
      android:id="@+id/textStrong"
      android:layout_width="382.0dp"
      android:layout_height="wrap_content"
      android:text="0"
      android:textStyle="bold"
      android:textSize="25dp"
      android:gravity="center" />
  <SeekBar
      android:layout_height="47.0dp"
      android:layout_width="match_parent"
      android:id="@+id/seekBarStrong" />

  <TextView
      android:id="@+id/text2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Объём выпитого: "
      android:textStyle="bold"
      android:textSize="20dp" />
  <TextView
      android:id="@+id/textVolume"
      android:layout_width="383.0dp"
      android:layout_height="wrap_content"
      android:text="0"
      android:textStyle="bold"
      android:textSize="25dp"
      android:gravity="center" />

  <SeekBar
        android:layout_height="38.5dp"
        android:layout_width="match_parent"
        android:id="@+id/seekBarVolume" />
  <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="37.5dp"
        android:id="@+id/progressBar1"
        android:layout_marginBottom="47.5dp" />
  <Button
      android:text="DRINK"
      android:layout_width="match_parent"
      android:layout_height="50.0dp"
      android:id="@+id/drinkbutton"
      android:textSize="30dp" />
  <Button
    android:text="я трезвый"
    android:layout_width="match_parent"
    android:layout_height="50.0dp"
    android:id="@+id/clearbutton"
    android:textSize="30dp" />
</LinearLayout>